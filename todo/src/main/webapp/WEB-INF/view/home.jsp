	<!-- Main jumbotron for a primary marketing message or call to action -->
	<div class="jumbotron">
		<div class="container">
			<h1>Hello!</h1>
			<!-- Send Message here -->
			<c:if test="${!empty loggedUser}">
				<form action="home/send" method="post" role="form">
					<div class="dropdown">
						<label for="receiver">Receiver</label> <select name="receiver"
							class="form-control">
							<c:forEach items="${listUsers}" var="user">
								<option value="${user.userId}">${user.userName}</option>
							</c:forEach>


						</select>
					</div>
					<div class="form-group">
						<label for="subject">Subject</label> <input name="subject" type="text"
							class="form-control" id="subject">
					</div>
					<div class="form-group">
						<label for="content">Message</label>
						<textarea name="content" class="form-control" rows="3" id="content"
							placeholder="Enter your message.."></textarea>
					</div>
					<button type="submit" class="btn btn-default">Send</button>
				</form>
				<p>
				<a class="btn btn-primary btn-lg" role="button"
					href="localhost:8080/todo/messages">See your messages &raquo;</a>
				</p>
			</c:if>
			<c:if test="${empty loggedUser}"></c:if>
			<p>Please login to send messages</p>
			
		</div>
	</div>

